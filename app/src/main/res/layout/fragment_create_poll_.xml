<FrameLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:tools="http://schemas.android.com/tools"
    android:id="@+id/create_poll_layout"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:background="@color/light_grey"
    tools:context="com.ssgmail.shubhammsoni.materialapp.Voting_Fragment">

    <android.support.v7.widget.CardView

        android:id="@+id/card1"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:layout_below="@+id/card2"
        android:layout_margin="8dp"
        android:gravity="center"
        android:layout_gravity="center_vertical">

        <LinearLayout
            android:id="@+id/add_option_EditText"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:orientation="vertical">

            <android.support.design.widget.TextInputLayout
                android:id="@+id/textInputLyout"
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:layout_marginTop="20dp">

                <EditText
                    android:id="@+id/enter_question_edittext"
                    android:layout_width="match_parent"
                    android:layout_height="wrap_content"
                    android:layout_below="@+id/vote_now"
                    android:layout_margin="15dp"
                    android:layout_marginTop="25dp"
                    android:hint="Enter Question for Poll:" />
            </android.support.design.widget.TextInputLayout>

            <TextView
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:layout_marginLeft="15dp"
                android:layout_marginRight="15dp"
                android:layout_marginTop="15dp"
                android:layout_marginBottom="0dp"
                android:text="Enter question which can be answered as Agree or Diasgree"
                android:textSize="20sp" />

            <Button
                android:id="@+id/create_poll_btn"
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:layout_gravity="bottom"
                android:layout_marginBottom="15dp"
                android:layout_marginLeft="15dp"
                android:layout_marginRight="15dp"
                android:layout_marginTop="100dp"
                android:background="#42A5F5"
                android:text="Get Your Poll code"

                android:textColor="@color/White"
                android:textSize="20sp" />
        </LinearLayout>
    </android.support.v7.widget.CardView>


</FrameLayout>
