<?xml version="1.0" encoding="utf-8"?>
<RelativeLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    xmlns:tools="http://schemas.android.com/tools"
    android:id="@+id/content"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:background="@color/light_grey"
    app:layout_behavior="@string/appbar_scrolling_view_behavior"
    tools:context="com.ssgmail.shubhammsoni.materialapp.Create_poll_Fragment"
    tools:showIn="@layout/app_bar_main">

    <android.support.v7.widget.CardView

        android:id="@+id/card1"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:layout_below="@+id/card2"
        android:layout_margin="8dp"
        android:gravity="center"
        android:layout_gravity="center_vertical">




        <android.support.design.widget.TextInputLayout
            android:id="@+id/enter_code_et_wrapper"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:layout_marginLeft="15dp"
            android:layout_marginRight="15dp"
            android:layout_marginTop="15dp">

            <EditText
                android:id="@+id/enter_code_et"
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:hint="Enter Vote Code:"

                />
        </android.support.design.widget.TextInputLayout>

        <Button
            android:id="@+id/search_poll"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:layout_marginBottom="15dp"
            android:layout_marginLeft="15dp"
            android:layout_marginRight="15dp"
            android:layout_marginTop="100dp"
            android:background="@color/sky_blue"
            android:text="Search Pool"
            android:textColor="@color/White"
            android:textSize="20sp" />

    </android.support.v7.widget.CardView>


    <android.support.v7.widget.CardView
        android:id="@+id/card2"
        android:layout_width="match_parent"
        android:layout_height="100dp"
        android:layout_margin="8dp"
        app:cardBackgroundColor="@color/sky_blue">

        <TextView
            android:layout_width="match_parent"
            android:layout_height="match_parent"
            android:gravity="center"
            android:text="Vote Now"
            android:textColor="@color/White"
            android:textSize="45sp" />
    </android.support.v7.widget.CardView>


</RelativeLayout>


