<FrameLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="wrap_content"
    android:layout_gravity="center"
    android:background="@color/light_grey"
    android:id="@+id/dialog_fragment"
    android:clickable="true"
    tools:context="com.ssgmail.shubhammsoni.materialapp.Dialog_Fragment">

    <android.support.v7.widget.CardView

        android:id="@+id/card"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:layout_margin="8dp"
        android:gravity="center"
        app:cardBackgroundColor="@color/sky_blue"
        tools:layout_editor_absoluteX="8dp"
        tools:layout_editor_absoluteY="56dp">

        <LinearLayout
            android:layout_width="match_parent"
            android:layout_height="match_parent"
            android:orientation="vertical">

            <TextView
                android:id="@+id/tx1"
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:layout_margin="10dp"
                android:gravity="center"
                android:text="Your Poll is Created !!!!
             Your poll code is:             "
                android:textColor="@color/White"
                android:textSize="30sp" />

            <TextView
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:layout_gravity="center"
                android:layout_margin="30dp"
                android:gravity="center"
                android:id="@+id/code"
                android:text="CODE HERE"
                android:textColor="@color/White"
                android:textSize="50sp" />

            <TextView
                android:layout_width="match_parent"
                android:layout_height="match_parent"
                android:gravity="center"
                android:text="Share this code for Voting"
                android:textColor="@color/White"

                android:textSize="30sp" />

            <Button
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:layout_gravity="center"
                android:layout_margin="15dp"
                android:padding="15dp"
                android:textColor="@color/White"
                android:background="@color/sky_blue"
                android:textSize="20sp"
                android:id="@+id/dialog_ok_btn"
                android:text="Copy Code" />
        </LinearLayout>
    </android.support.v7.widget.CardView>

</FrameLayout>
